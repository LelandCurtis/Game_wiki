<h1>Roles</h1>
<br>
<h3><%= link_to 'Create New Role', '/roles/new' %></h3>
<h3><%= link_to 'Sort By Weapon Count', '/roles?by_weapon=true' %></h3>
<div class="roles">
<% @roles.each do |role| %>
  <div class ="role", id= <%= "role_#{role.id}" %>>
    <h3><%= link_to "#{role.name}", "/roles/#{role.id}" %></h3>
    <p><%= "Created at: #{role.created_at}" %></p>
    <%= button_to 'Edit', "/roles/#{role.id}/edit", method: :get, :id => "Edit_#{role.id}"%>
    <%= button_to 'Delete Role', "/roles/#{role.id}", method: :delete %>
  </div>
<% end %>
</div>
<br>
