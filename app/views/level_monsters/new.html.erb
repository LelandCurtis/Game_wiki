<h1>Creating new Monster</h1>
<%= form_with url: "/levels/#{@level.id}/monsters", method: :post, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <br>
  <%= form.label :enraged %>
  <%= form.select :enraged, [['False',false], ['True', true]] %>
  <br>
  <%= form.label :health %>
  <%= form.number_field :health %>
  <br>
  <%= form.submit "Create Monster" %>

<% end %>
